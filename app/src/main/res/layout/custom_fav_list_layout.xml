<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="#fff"
    >


    <LinearLayout
        android:layout_marginTop="2dp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/laminate_product_list_layout"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:padding="5dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/image1"
                android:scaleType="fitXY"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingBottom="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laminate Name"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:id="@+id/laminatename"
                        android:layout_margin="3dp"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_margin="2dp"
                        android:layout_marginLeft="1dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Finish Type :"
                            android:id="@+id/finishtypetext"
                            android:layout_weight="1.8"
                            android:textSize="12sp"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:text="FM"
                            android:id="@+id/finishtype"
                            android:layout_weight="1"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/heartfilled"
                    android:padding="3dp"
                    android:id="@+id/fav"
                    android:gravity="right|center|center_vertical"
                    android:layout_gravity="right"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:layout_marginLeft="1dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item Code :"
                    android:layout_weight="2.1"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Rose Wood"
                    android:id="@+id/design_number"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:visibility="gone"
                android:layout_marginLeft="1dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Design Name : "
                    android:id="@+id/designnametext"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Rose Wood"
                    android:id="@+id/designname"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:layout_marginRight="1dp"
                    android:id="@+id/wheretobuy"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Store Locator"
                        android:id="@+id/textView1"
                        android:gravity="center"
                        android:textColor="#fff"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/buynow"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Enquiry"
                        android:gravity="center"
                        android:id="@+id/textView2"
                        android:textColor="#fff"/>

                </LinearLayout>


            </LinearLayout>

            <!--<View-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="#BDBDBD"/>-->
        </LinearLayout>


    </LinearLayout>

</LinearLayout>